<?xml version="1.0"?>

<PropertyList>
 <particlesystem>
   <name>lava-burst</name>
   <texture>smoke.png</texture>
   <emissive>true</emissive>
   <lighting>true</lighting>
 
   <offsets>
     <x-m>0.0</x-m>
     <y-m>0.0</y-m>
     <z-m>0.0</z-m>
   </offsets>
   <attach>world</attach>
 
   <placer>
     <type>point</type>
   </placer>
 
   <shooter>
     <theta-min-deg>90.0</theta-min-deg>
     <theta-max-deg>90.0</theta-max-deg>
     <phi-min-deg>134.0</phi-min-deg>
     <phi-max-deg>138.0</phi-max-deg>
     <speed-mps>
       <value>60.0</value>
       <spread>2.5</spread>
     </speed-mps>
     <rotation-speed>
       <x-min-deg-sec>0</x-min-deg-sec>
       <y-min-deg-sec>0</y-min-deg-sec>
       <z-min-deg-sec>0</z-min-deg-sec>
       <x-max-deg-sec>0</x-max-deg-sec>
       <y-max-deg-sec>0</y-max-deg-sec>
       <z-max-deg-sec>0</z-max-deg-sec>
     </rotation-speed>
   </shooter>
     
   <counter>
     <particles-per-sec>
       <value>0.5</value>
       <spread>15</spread>
     </particles-per-sec>
   </counter>
   <align>billboard</align>
      
   <particle>
     <start>
       <color>
         <red>
           <value>0.4</value>
         </red>
         <green>
           <value>0.05</value>
         </green>
         <blue>
           <value>0.0</value>
         </blue>
         <alpha>
           <value>0.8</value>
         </alpha>
       </color>
       <size>
         <value>1.0</value>
       </size>
     </start>
 
     <end>
       <color>
         <red>
           <value>0.4</value>
         </red>
         <green>
           <value>0.0</value>
         </green>
         <blue>
           <value>0.1</value>
         </blue>
         <alpha>
           <value>0.4</value>
         </alpha>
       </color>
       <size>
         <value>1.0</value>
       </size>
     </end>
 
     <life-sec>
       <value>8</value>
     </life-sec>
 
     <mass-kg>100000.0</mass-kg>
     <radius-m>5.0</radius-m>
   </particle>
 
   <program>
     <fluid>air</fluid>
     <gravity type="bool">true</gravity>
     <wind type="bool">false</wind>
   </program>
</particlesystem>





</PropertyList>
